# Pepebot Environment Configuration
# Copy this file to .env and fill in your values

# Agent Configuration
PEPEBOT_MODEL=maia/gemini-3-pro-preview
PEPEBOT_MAX_TOKENS=8192
PEPEBOT_TEMPERATURE=0.7

# Provider API Keys (choose one or more)
PEPEBOT_PROVIDERS_MAIAROUTER_API_KEY=
PEPEBOT_PROVIDERS_ANTHROPIC_API_KEY=
PEPEBOT_PROVIDERS_OPENAI_API_KEY=
PEPEBOT_PROVIDERS_OPENROUTER_API_KEY=
PEPEBOT_PROVIDERS_GROQ_API_KEY=
PEPEBOT_PROVIDERS_ZHIPU_API_KEY=
PEPEBOT_PROVIDERS_GEMINI_API_KEY=

# Telegram Bot
PEPEBOT_CHANNELS_TELEGRAM_ENABLED=false
PEPEBOT_CHANNELS_TELEGRAM_TOKEN=
PEPEBOT_CHANNELS_TELEGRAM_ALLOW_FROM=

# Discord Bot
PEPEBOT_CHANNELS_DISCORD_ENABLED=false
PEPEBOT_CHANNELS_DISCORD_TOKEN=
PEPEBOT_CHANNELS_DISCORD_ALLOW_FROM=

# WhatsApp Bridge
PEPEBOT_CHANNELS_WHATSAPP_ENABLED=false
PEPEBOT_CHANNELS_WHATSAPP_BRIDGE_URL=ws://localhost:3001

# Web Search (Brave API)
PEPEBOT_TOOLS_WEB_SEARCH_API_KEY=

# Gateway
PEPEBOT_GATEWAY_HOST=0.0.0.0
PEPEBOT_GATEWAY_PORT=18790

# System
TZ=UTC
